{
  "name": "ghost",
  "version": "0.1.0",
  "description": "Cross-platform text selection popup tool",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "lint": "eslint src/",
    "format": "eslint src/ --fix",
    "test": "jest",
    "build-native": "bash scripts/build-native.sh",
    "build-native:release": "bash scripts/build-native.sh --release",
    "build-native:clean": "bash scripts/build-native.sh --clean",
    "swift:lint": "bash scripts/build-native.sh --lint",
    "swift:format": "cd native && swiftformat .",
    "swift:test": "bash scripts/build-native.sh --test",
    "applescript:validate": "bash scripts/validate-applescript.sh",
    "clean": "rm -rf dist/ native/bin/ native/.build/ node_modules/.cache/",
    "dev:setup": "npm install && npm run build-native",
    "postinstall": "brew install swiftlint swiftformat"
  },
  "keywords": [
    "text-selection",
    "productivity",
    "cross-platform",
    "popup"
  ],
  "author": "Michael Knoedel",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9",
    "eslint": "^8.52.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0"
  },
  "build": {
    "appId": "com.ghost.textselection",
    "productName": "Ghost",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "native/bin/SelectionTap",
      "node_modules/**/*",
      "package.json"
    ]
  }
}
